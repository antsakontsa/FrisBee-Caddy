<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineSpotShadowColor="@color/colorPrimaryDark"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/hole_number"
            android:layout_width="@dimen/_39sdp"
            android:layout_height="@dimen/_39sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_4sdp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_23sdp" />

        <TextView
            android:id="@+id/par_number"
            android:layout_width="@dimen/_39sdp"
            android:layout_height="@dimen/_39sdp"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toEndOf="@+id/hole_number"
            android:layout_toRightOf="@+id/hole_number"
            android:background="@drawable/border_box"
            android:padding="@dimen/_4sdp"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_23sdp" />

        <ImageView
            android:id="@+id/item_minus_btn"
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_toStartOf="@+id/item_plus_btn"
            android:layout_toLeftOf="@+id/item_plus_btn"
            android:background="@drawable/ic_minus" />

        <ImageView
            android:id="@+id/item_plus_btn"
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/ic_plus" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>