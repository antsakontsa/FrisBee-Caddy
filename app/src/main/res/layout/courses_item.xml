<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_toStartOf="@+id/img_delete"
            android:layout_toLeftOf="@+id/img_delete"
            android:text="Mukkula Etu9"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/holes_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_name"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Holes:"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/holes_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_name"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/holes_txt"
            android:layout_toRightOf="@+id/holes_txt"
            android:text="99"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/par_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_name"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_toStartOf="@+id/par_nm"
            android:layout_toLeftOf="@+id/par_nm"
            android:text="Par:"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/par_nm"
            android:layout_width="@dimen/_141sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:text="57"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18sdp" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/ic_delete" />

        <View
            android:layout_alignBottom="@id/holes_txt"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorAccent" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>