<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/gameNameRecycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="Antti"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_19sdp" />

        <TextView
            android:id="@+id/gameParNumberRecycler"
            android:layout_width="@dimen/_39sdp"
            android:layout_height="@dimen/_39sdp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toStartOf="@+id/game_minus_btn"
            android:layout_toLeftOf="@+id/game_minus_btn"
            android:background="@drawable/border_box"
            android:padding="@dimen/_4sdp"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_21sdp" />

        <ImageView
            android:id="@+id/game_minus_btn"
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_toStartOf="@+id/game_plus_btn"
            android:layout_toLeftOf="@+id/game_plus_btn"
            android:background="@drawable/ic_minus" />

        <ImageView
            android:id="@+id/game_plus_btn"
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/ic_plus" />

        <TextView
            android:id="@+id/game_total_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gameNameRecycler"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="TTL :"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/game_total_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameNameRecycler"
            android:layout_toEndOf="@+id/game_total_txt"
            android:layout_toRightOf="@+id/game_total_txt"
            android:text="0"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_15sdp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>